<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/beans_main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.lwk.beans.MainActivity">

    <FrameLayout
        android:id="@+id/beans_main_fragmentshow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="0dp"
        >

        <RadioGroup
            android:id="@+id/beans_main_controller"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <RadioButton
                android:id="@+id/beans_main_controller_home"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/icon_main_home"
                android:text="首页"
                android:checked="true"

                android:textSize="12sp"
                android:textColor="@drawable/radiobutton_color"/>

            <RadioButton
                android:id="@+id/beans_main_controller_shop"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/icon_main_goods"
                android:text="商城"
                android:textSize="12sp"
                android:textColor="@drawable/radiobutton_color"/>

            <RadioButton
                android:id="@+id/beans_main_controller_magic"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/icon_main_magic"
                android:text="软装魔法"
                android:textSize="12sp"
                android:textColor="@drawable/radiobutton_color"/>

            <RadioButton
                android:id="@+id/beans_main_controller_shoppingcart"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/icon_main_cart"
                android:text="购物车"
                android:textSize="12sp"
                android:textColor="@drawable/radiobutton_color"/>

            <RadioButton
                android:id="@+id/beans_main_controller_mine"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/icon_main_account"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@drawable/radiobutton_color"/>

        </RadioGroup>
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/teach_navigation"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/activity_main_draw_header"
        app:menu="@menu/navigation_menu"
        app:itemTextColor="#000000"

        android:background="#56ccba"

        />
</android.support.v4.widget.DrawerLayout>
