<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="登陆"
        android:textColor="#000000"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/beans_main_controller_shoppingcart_user"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/user"/>
    <EditText
        android:id="@+id/beans_main_controller_shoppingcart_useredit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/beans_main_controller_shoppingcart_user"
        android:layout_marginTop="30dp"
        android:hint="手机/邮箱"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/password"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="93dp"
        />
    <EditText
        android:id="@+id/beans_main_controller_shoppingcart_passwordedit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/beans_main_controller_shoppingcart_user"

        android:layout_marginTop="85dp"
        android:textSize="12sp"
        android:hint="密码"/>
    <Button
        android:id="@+id/beans_main_controller_shoppingcart_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="135dp"
        android:background="#50c1b6"
        android:textColor="#ffffff"
        android:text="登陆"/>
    <TextView
        android:id="@+id/beans_main_controller_shoppingcart_newuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新用户注册"
        android:layout_marginTop="200dp"
        android:textColor="#3daea6"
        android:textSize="12sp"
        android:layout_marginLeft="90dp"/>
    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="175dp"
        android:background="#44aba2"/>
    <TextView
        android:id="@+id/beans_main_controller_shoppingcart_forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textSize="12sp"
        android:layout_marginTop="200dp"
        android:textColor="#3daea6"

        android:layout_marginLeft="200dp"/>
    <View
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:layout_marginTop="300dp"
        android:background="#4dc6be"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:text="第三方登录"
        android:textSize="12sp"
        android:layout_marginLeft="150dp"

        />
    <View
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="225dp"
        android:background="#4dc6be"/>
    <ImageView
        android:id="@+id/shoppingcart_login_qq"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/qqq"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="130dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ"
        android:textSize="12sp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="135dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="210dp"
        android:src="@mipmap/weibo"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微博"
        android:textSize="12sp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="210dp"/>
</RelativeLayout>