<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager
        android:id="@+id/beans_shop_header_viewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <LinearLayout
        android:id="@+id/beans_shop_header_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/beans_shop_header_viewpager"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/beans_shop_header_lv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shop_header_lv_four_image"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="200dp"
        android:padding="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/shop_header_lv_four_image1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/shop_header_lv_four_image2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/shop_header_lv_four_image3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/shop_header_lv_four_image4"

            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="255dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/shop_header_lv_four_title1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text="title1"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/shop_header_lv_four_title2"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textSize="13sp"

            android:text="title2"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/shop_header_lv_four_title3"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="title3"
            android:textSize="13sp"

            android:layout_weight="1"/>
        <TextView
            android:id="@+id/shop_header_lv_four_title4"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text="title4"
            android:gravity="center"
            android:textSize="13sp"

            android:layout_weight="1"/>
    </LinearLayout>



</RelativeLayout>